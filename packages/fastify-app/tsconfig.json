{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["esnext"],
    "module": "nodenext",
    "baseUrl": "./",
    "paths": {
      "$api/*": ["src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
